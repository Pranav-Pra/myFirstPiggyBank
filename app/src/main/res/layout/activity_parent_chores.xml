<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ParentChores">

    <EditText
        android:id="@+id/choreET"
        android:layout_width="@dimen/etWidth"
        android:layout_height="@dimen/etHeight"
        android:layout_marginTop="@dimen/topMarginTopItem"
        android:ems="10"
        android:hint="Chore"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/descET"
        android:layout_width="@dimen/etWidth"
        android:layout_height="@dimen/etHeight"
        android:layout_margin="@dimen/margin"
        android:ems="10"
        android:hint="Description"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/choreET" />

    <EditText
        android:id="@+id/valueET"
        android:layout_width="@dimen/etWidth"
        android:layout_height="@dimen/etHeight"
        android:layout_margin="@dimen/margin"
        android:ems="10"
        android:hint="Value"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descET" />

    <Button
        android:id="@+id/addButton"
        android:layout_width="@dimen/buttonWidth"
        android:layout_height="@dimen/buttonHeight"
        android:layout_margin="@dimen/margin"
        android:onClick="addChore"
        android:text="Add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/valueET" />
</androidx.constraintlayout.widget.ConstraintLayout>